@model IEnumerable<Category>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>Category List</h2>
    <br />
    <div class="container mt-2">
        <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="AddOrUpdate">
            Create
        </a>
    </div>
    <br />

    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ktg in Model)
                        {
                            <tr>
                                <td>@ktg.CategoryId</td>
                                <td>@ktg.Name</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="AddOrUpdate" asp-route-id="@ktg.CategoryId">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@ktg.CategoryId">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            }
            else
            {
                <div class="aler alert-danger">
                    Kategori Eklenmedi!!!
                </div>
            }
        </div>
    </div>
</div>


